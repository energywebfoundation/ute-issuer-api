{
    "name": "@energyweb/ute-issuer-api",
    "private": true,
    "version": "0.0.1",
    "description": "UTE Issuer API",
    "main": "dist/js/src/index.js",
    "scripts": {
        "start": "nest start -p tsconfig.json",
        "start:dev": "nest start --watch -p tsconfig.json",
        "start:prod": "node dist/js/src/main.js",
        "prebuild": "rm -rf dist",
        "build": "yarn build:ts",
        "build:ts": "tsc -b tsconfig.json",
        "build:docker": "make build",
        "deploy:heroku": "make build deploy-heroku",
        "lint": "eslint \"src/**/*{.ts,.tsx}\" --quiet",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "migrate:docker": "yarn typeorm:migrate:issuer",
        "typeorm:migrate:issuer": "typeorm migration:run --config node_modules/@energyweb/exchange/dist/js/ormconfig.js",
        "typeorm:run": "yarn typeorm migration:run",
        "precommit": "lint-staged",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "engines": {
        "node": "14"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/energywebfoundation/ute-issuer-api.git"
    },
    "author": "EnergyWeb DevHub GmbH; Aleksandr Marenin, aleksandr.marenin@energyweb.org",
    "dependencies": {
        "@energyweb/issuer-api": "0.2.1-alpha.1616755491.0",
        "@energyweb/origin-backend-core": "8.0.1",
        "@energyweb/origin-backend-utils": "1.5.1",
        "@nestjs/common": "7.6.15",
        "@nestjs/config": "0.6.3",
        "@nestjs/core": "7.6.15",
        "@nestjs/cqrs": "7.0.1",
        "@nestjs/passport": "7.1.5",
        "@nestjs/platform-express": "^7.6.15",
        "@nestjs/schematics": "7.3.0",
        "@nestjs/swagger": "4.8.0",
        "@nestjs/typeorm": "7.1.5",
        "ethers": "5.0.32",
        "express": "4.17.1",
        "moment": "2.29.1",
        "passport": "^0.4.1",
        "typeorm": "0.2.31"
    },
    "devDependencies": {
        "@nestjs/cli": "7.6.0",
        "@types/chai": "4.2.15",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.17.11",
        "@types/mocha": "8.2.2",
        "@types/node": "12.20.6",
        "@typescript-eslint/eslint-plugin": "4.18.0",
        "@typescript-eslint/parser": "4.18.0",
        "dotenv": "8.2.0",
        "eslint": "7.22.0",
        "eslint-config-airbnb-base": "14.2.1",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.1",
        "husky": "4.3.8",
        "lint-staged": "10.5.4",
        "mocha": "8.3.2",
        "prettier": "2.2.1",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn precommit"
        }
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "useTabs": false,
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "none"
    }
}
