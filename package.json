{
    "name": "@energyweb/ute-issuer-api",
    "private": true,
    "version": "0.0.1",
    "description": "UTE Issuer API",
    "main": "dist/js/src/index.js",
    "scripts": {
        "start": "nest start -p tsconfig.json",
        "start:dev": "yarn typeorm:drop && yarn typeorm:drop:issuer && yarn migrate && nest start --watch -p tsconfig.json",
        "start:prod": "node dist/js/src/main.js",
        "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20 -q",
        "prebuild": "rm -rf dist",
        "build": "yarn build:ts",
        "build:ts": "tsc -b tsconfig.json",
        "build:docker": "make build",
        "deploy:heroku": "make build deploy-heroku",
        "lint": "eslint \"src/**/*{.ts,.tsx}\" \"migrations/**/*{.ts,.tsx}\"",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "migrate": "yarn typeorm:run",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./ormconfig.ts",
        "typeorm:run": "yarn typeorm migration:run",
        "typeorm:drop": "yarn typeorm schema:drop",
        "typeorm:drop:issuer": "node_modules/typeorm/cli.js schema:drop --config node_modules/@energyweb/issuer-api/dist/js/ormconfig.js",
        "precommit": "lint-staged",
        "test": "echo \"Implement tests\""
    },
    "engines": {
        "node": "14"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/energywebfoundation/ute-issuer-api.git"
    },
    "author": "EnergyWeb DevHub GmbH; Aleksandr Marenin, aleksandr.marenin@energyweb.org",
    "dependencies": {
        "@energyweb/issuer": "3.2.1-alpha.1625573089.0",
        "@energyweb/issuer-api": "0.2.1-alpha.1625573089.0",
        "@energyweb/migrations": "3.2.5-alpha.1625573089.0",
        "@energyweb/origin-backend-core": "8.0.2-alpha.1625573089.0",
        "@energyweb/origin-backend-utils": "1.5.2-alpha.1625573089.0",
        "@energyweb/utils-general": "11.0.3-alpha.1625573089.0",
        "@nestjs/common": "7.6.18",
        "@nestjs/config": "0.6.3",
        "@nestjs/core": "7.6.18",
        "@nestjs/cqrs": "7.0.1",
        "@nestjs/passport": "7.1.6",
        "@nestjs/platform-express": "7.6.18",
        "@nestjs/schematics": "7.3.1",
        "@nestjs/swagger": "4.8.2",
        "@nestjs/typeorm": "7.1.5",
        "bn.js": "5.2.0",
        "class-validator": "0.13.1",
        "dotenv": "10.0.0",
        "ethers": "5.4.1",
        "express": "4.17.1",
        "moment": "2.29.1",
        "passport": "0.4.1",
        "ts-node": "9.1.1",
        "tsconfig-paths": "3.9.0",
        "typeorm": "0.2.34"
    },
    "devDependencies": {
        "@nestjs/cli": "7.6.0",
        "@types/chai": "4.2.15",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.17.12",
        "@types/mocha": "8.2.2",
        "@types/node": "14.17.4",
        "@typescript-eslint/eslint-plugin": "4.18.0",
        "@typescript-eslint/parser": "4.18.0",
        "eslint": "7.22.0",
        "eslint-config-airbnb-base": "14.2.1",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.1",
        "ganache-cli": "6.12.2",
        "husky": "4.3.8",
        "lint-staged": "10.5.4",
        "mocha": "9.0.2",
        "prettier": "2.3.2",
        "typescript": "4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn precommit"
        }
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "useTabs": false,
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "none"
    }
}
